root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.env]
trim_trailing_whitespace = false

[*.{js,jsx,ts}]
indent_size = 4

[*.{diff,md}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[{Makefile,*.mk}]
indent_style = tab
